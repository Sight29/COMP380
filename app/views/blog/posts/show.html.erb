<%  provide(:page_title, @post.title) %>
  <% provide(:blog_active, 'active') %>
<!--  shows the blog post that has been written -->
    <div class="row">
      <div class="col-md-1 col-lg-2"></div>
      <div class="col-md-10 col-lg-8 text-xs-center">
        <h1>
          <%= @post.title %>
        </h1>
        <p> <%= @post.display_published_day %></p>
        <%= @post.body.html_safe %>

         <div class="author-name">
            <h4> <%= @post.author.name  %> </h4>
         </div> 


        <div id="comment-js">
          <noscript>Please enable JavaScript if you cannot see the comments<a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
          </noscript>       
        </div>
     
      </div>
    </div>
    
          <script>
         
        /** this adds the comment functionality to the blog post at the bottom **/   
          var disqus_config = function () {
          this.page.url = '<%= request.original_url  %>';  
          this.page.identifier = '<%=  @post.slug  %>'
          };
        
          (function() { // DON'T EDIT BELOW THIS LINE
          var d = document, s = d.createElement('script');
          s.src = 'https://380-blog.disqus.com/embed.js';
          s.setAttribute('data-timestamp', +new Date());
          (d.head || d.body).appendChild(s);
          })();
          </script>
        